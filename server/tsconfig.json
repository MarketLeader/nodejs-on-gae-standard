{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "shared/*": [
        "../shared/src/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "../shared/src/**/*"
  ],
  "exclude": [
    "../node_modules",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "../shared" }
  ]
}
